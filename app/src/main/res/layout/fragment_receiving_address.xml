<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_rounded_bg"
    android:minWidth="320dp"
    android:minHeight="150dp"
    android:orientation="vertical"
    tools:context=".PopFragments.ReceivingAddressFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/ic_baseline_close_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Receiving Address"
                android:textColor="#5C578E"
                android:textSize="@dimen/_13ssp" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/awesome_history"
                android:visibility="gone"
                app:tint="@color/colorBlack" />

        </RelativeLayout>

        <View
            android:layout_below="@+id/rlback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/linecolor" />
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/card_round"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_Copy"
            android:background="@color/colorTransparent"
            android:editable="false"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:id="@+id/btn_Copy"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_12sdp"
            android:src="@drawable/copy" />

    </RelativeLayout>
    <Button
        android:id="@+id/btn_sendBitcoin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/btn_round"
        android:text="Done"
        android:layout_marginHorizontal="@dimen/_56sdp"
        android:fontFamily="@font/avenir_medium"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"

        />
</LinearLayout>