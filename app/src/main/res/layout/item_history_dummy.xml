<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_itemName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/avenir_medium"
            android:gravity="center_vertical"
            android:text="ITUNES USA (100s)"
            android:textColor="#54447C"
            android:textSize="@dimen/_11ssp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnStatus"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/complete_background"
            android:fontFamily="@font/avenir_medium"
            android:paddingHorizontal="@dimen/_12sdp"
            android:text="Completed"
            android:textSize="@dimen/_9ssp"

            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/avenir_medium"
            android:gravity="center_vertical"
            android:text="$100"
            android:textColor="#54447C"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tv_amountinngn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/avenir_bold"
            android:gravity="center_vertical"
            android:text="NGN56,000"
            android:textColor="#353062"
            android:textSize="@dimen/_13ssp"

            />

    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-03-2020"
        android:textSize="@dimen/_9ssp"
        android:layout_marginTop="@dimen/_6sdp"
        android:fontFamily="@font/avenir_medium"
        android:textColor="#282452"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"
        android:layout_marginTop="@dimen/_12sdp"/>
</LinearLayout>