<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:background="@drawable/dialog_rounded_bg"
    android:elevation="@dimen/_2sdp"
    android:gravity="center"
    android:minWidth="320dp"
    android:orientation="vertical"
    tools:context=".PopFragments.ChangePasswordFragment">


    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/cross" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_68sdp"
            android:layout_marginTop="40dp"
            android:text="Change Password"
            android:textColor="@color/pdlg_color_black"
            android:textSize="@dimen/_20sdp"

            android:textStyle="bold" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/yugothib"
            android:text="Current Password"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"

            />

        <EditText
            android:id="@+id/ed_current_Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/card_round"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/yugothib"
            android:text="New Password"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/ed_new_Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/card_round"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/yugothib"
            android:text="Confirm Password"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/ed_confirm_Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/card_round"
            android:imeOptions="actionNext"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/btn_round"
        android:fontFamily="@font/yugothib"
        android:text="Change Password"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />


</LinearLayout>