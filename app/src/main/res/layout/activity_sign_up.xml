<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    tools:context=".Activities.SignUpActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/back_ic"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_ic"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/segoe_ui"
            android:text="Create Account"
            android:textColor="@color/pdlg_color_white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_marginTop="@dimen/_60sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_back"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_16sdp">
            <RelativeLayout
                android:id="@+id/rlback"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:src="@drawable/ic_baseline_close_24" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_24sdp"
                android:fontFamily="@font/avenir_bold"
                android:text="Create Account ðŸš€"
                android:textColor="@color/welcomelogincolor"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/yugothib"
                android:text="We are happy to have you on our platform"
                android:textColor="@color/wearehappy"
                android:textSize="@dimen/_11ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_back"

                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:elevation="@dimen/_8sdp"
                    android:hint="User Name"
                    android:textColorHint="@color/colorGray"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:hintTextColor="@color/colorBlack">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:inputType="textPersonName"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/avenir_medium"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="@dimen/_11ssp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_8sdp"
                    android:hint="Email"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColorHint="@color/colorGray"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:hintTextColor="@color/colorBlack">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorBlack"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/avenir_medium"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:elevation="@dimen/_8sdp"
                    android:hint="Phone Number"
                    android:textColorHint="@color/colorGray"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:hintTextColor="@color/colorBlack">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:inputType="phone"
                        android:textColor="@color/colorBlack"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/avenir_medium" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:elevation="@dimen/_8sdp"
                    android:hint="Password"
                    android:textColorHint="@color/colorGray"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:hintTextColor="@color/colorBlack"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/donthaveaccount">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:inputType="textPassword"
                        android:textColor="@color/colorBlack"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/avenir_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:elevation="@dimen/_8sdp"
                    android:hint="Password"
                    android:textColorHint="@color/colorGray"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:hintTextColor="@color/colorBlack"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/donthaveaccount">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_confirm_Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:cursorVisible="true"
                        android:inputType="textPassword"
                        android:textColor="@color/colorBlack"
                        android:textCursorDrawable="@drawable/cursor_drawable"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/avenir_medium" />
                </com.google.android.material.textfield.TextInputLayout>







                <Button
                    android:id="@+id/btn_sigUp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/btn_round"
                    android:text="Continue"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/avenir_medium"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:text="By continuing,you agree to accept our\nPrivacy Policy &amp;Terms of Service"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/colorWhite" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:elevation="@dimen/_3sdp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/avenir_bold"
            android:textSize="@dimen/_10sdp"
            android:text="Already have an account?"
            android:textColor="@color/donthaveaccount"
            />


        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:onClick="SignIn"
            android:text=" Login"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/avenir_bold" />


    </LinearLayout>


</RelativeLayout>