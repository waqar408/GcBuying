<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbackground"
    tools:context=".Activities.TradeBitCoinActivity">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_rounded">


        <ImageView
            android:id="@+id/back_ic"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/yugothib"
            android:gravity="center_horizontal"
            android:text="Sell Bitcoin From External Wallet"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_back"
                android:orientation="vertical"
                android:elevation="@dimen/_3sdp">

                <RelativeLayout
                    android:id="@+id/rlback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    >

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_baseline_close_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:text="Select Bitoin From External Wallet"
                        android:textColor="#5C578E" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/linecolor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_16sdp">
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/yugothib"
                        android:text="Upload Your Transaction Image"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12sdp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pickImage"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/uploadimage" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_transacionImage"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:scaleType="fitXY"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize12Percent" />

                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#F1FEF2"
                        android:layout_gravity="center"
                        android:gravity="center">


                        <ImageView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sell_gift_card_ic" />


                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:elevation="@dimen/_8sdp"
                        android:hint="Total Amount in USD ($)"
                        android:textColorHint="@color/colorGray"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:hintTextColor="@color/colorBlack">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ed_usdAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:fontFamily="@font/avenir_medium"
                            android:inputType="number"
                            android:textColor="@color/colorBlack"
                            android:textCursorDrawable="@drawable/cursor_drawable"
                            android:textSize="@dimen/_11ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/yugothib"
                            android:text="Total Amount in USD ($)"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/card_round"
                            android:paddingLeft="@dimen/_10sdp" />


                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:elevation="@dimen/_8sdp"
                        android:hint="Total Amount in BTC"
                        android:textColorHint="@color/colorGray"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:hintTextColor="@color/colorBlack">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ed_btcAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:fontFamily="@font/avenir_medium"
                            android:inputType="number"
                            android:textColor="@color/colorBlack"
                            android:textCursorDrawable="@drawable/cursor_drawable"
                            android:textSize="@dimen/_11ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/yugothib"
                            android:text="Total Amount in BTC"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:inputType="number"
                            android:textSize="@dimen/_12sdp"
                            android:imeOptions="actionNext"
                            android:background="@drawable/card_round"
                            android:paddingLeft="@dimen/_10sdp" />

                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:elevation="@dimen/_8sdp"
                        android:hint="You will get(NGN)"
                        android:textColorHint="@color/colorGray"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:hintTextColor="@color/colorBlack">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ed_getN"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:fontFamily="@font/avenir_medium"
                            android:inputType="number"
                            android:textColor="@color/colorBlack"
                            android:textCursorDrawable="@drawable/cursor_drawable"
                            android:textSize="@dimen/_11ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/yugothib"
                            android:text="You Will Get (N)"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:inputType="number"
                            android:textSize="@dimen/_12sdp"
                            android:imeOptions="actionNext"
                            android:background="@drawable/card_round"
                            android:paddingLeft="@dimen/_10sdp"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/yugothib"
                            android:text="Please Pay to"
                            android:visibility="gone"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/card_round"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_id"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginRight="3dp"
                                android:layout_toLeftOf="@id/btn_Copy"
                                android:background="@color/colorTransparent"
                                android:editable="false"
                                android:hint="Destination Address"
                                android:padding="@dimen/_5sdp"
                                android:textSize="@dimen/_11sdp" />

                            <ImageView
                                android:id="@+id/btn_Copy"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginEnd="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/copy" />

                        </RelativeLayout>


                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/LoginTextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:elevation="@dimen/_8sdp"
                        android:hint="Extra Information (Optional)"
                        android:textColorHint="@color/colorGray"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp"
                        app:hintTextColor="@color/colorBlack">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ed_extraInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:fontFamily="@font/avenir_medium"
                            android:inputType="text"
                            android:textColor="@color/colorBlack"
                            android:textCursorDrawable="@drawable/cursor_drawable"
                            android:textSize="@dimen/_11ssp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/avenir_medium"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="By continuing, you agree to accept our"
                        android:textColor="@color/continuetotermcolor"
                        android:textSize="@dimen/_11ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Privay Policy "
                            android:textColor="@color/welcomelogincolor"
                            android:textSize="@dimen/_11ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/yugothib"
                            android:text="&amp; "
                            android:textColor="@color/continuetotermcolor"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/avenir_bold"
                            android:text="Terms of Serivces"
                            android:textColor="@color/welcomelogincolor"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/yugothib"
                            android:text="Extra Information (Optional)"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:inputType="text"
                            android:textSize="@dimen/_13sdp"
                            android:imeOptions="actionDone"
                            android:textAlignment="viewStart"
                            android:background="@drawable/card_round"
                            android:gravity="start" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/yugothib"
                            android:paddingLeft="@dimen/_10sdp"
                            android:text="By continuing, you agree to accept our"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/yugothib"
                            android:text="Term and Conditions"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_tradeBitCoin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/btn_round"
                        android:text="Trade Bitcoin"
                        android:textAllCaps="false"
                        android:onClick="sellBitvoin"
                        android:textColor="@color/colorWhite"
                        tools:ignore="OnClick" />
                </LinearLayout>






            </LinearLayout>

        </LinearLayout>



    </ScrollView>




</LinearLayout>